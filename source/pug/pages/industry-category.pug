extends ../components/base/layout

block variables
  - const title = "ProjectName" //- на страницах кроме главной используйте О нас — ProjectName
  - const wrapperMods = ""
  - const hasHeader = false
  - const headerMods = ""
  - const hasFooter = true
  - const footerMods = ""
  - const currentUrl = ""

block main
  main
    header.header.header--industry-category.header--inner
      .container
        a(href="/").header__back
          +icon("arrow", 23, 22)
          span Назад
        h1.header__title.title.title--white СВЕТОТЕХНИЧЕСКАЯ #[span!="ПРОДУКЦИЯ"]
        .header__arrow
          +icon("arrow", 23, 22)
        .header__inner-image
          +img("content", "industry-category-image", "png", 814, 679, "Декоративная картинка")
  +search().industry-category-search
  +card-results(cardResults)
  .tabs.industry-category-tabs.no-transition-global(data-tabs='parent', data-delay='300')&attributes(attributes)
    .container
      h2.tabs__title.title #[!=tabs.industryCategoryTabs.title] #[span.tabs__subtitle!=tabs.industryCategoryTabs.subTitle]
      ul.tabs__controls(data-tabs='controls')
        <div class="tabs__select custom-select" data-select data-validate-type="select" data-name="some-name" data-id="id-example-1"><span class="custom-select__placeholder">Выберите одну из опций</span>
          <button class="custom-select__button" type="button" aria-label="Выберите одну из опций"><span class="custom-select__text"></span><span class="custom-select__icon"><svg width="23" height="22" aria-hidden="true"><use xlink:href="img/sprite.svg#arrow"></use></svg></span></button>
          <ul class="custom-select__list" role="listbox">
            - for (let i = 0; i < tabs.industryCategoryTabs.tabsTitles.length; i++)
              li.custom-select__item.tabs__control.btn(tabindex="0" data-select-value=`id-${i}` aria-selected="true" role="option" data-tabs='control')!=tabs.industryCategoryTabs.tabsTitles[i]
          </ul>
        </div>
      .tabs__content(data-tabs='content')
        - for (let i = 0; i < tabs.industryCategoryTabs.tabsTitles.length; i++)
          .tabs__element(data-tabs='element')
            - for (let i = 0; i < tabs.industryCategoryTabs.titles.length; i++)
              +card-tab(i)
  .map
    .container
      .map__title.title Карта Предприятий <br> #[span!="СВЕТОТЕХНИЧЕСКОЙ ПРОДУКЦИИ"]
    <div id="map" width="100%"></div>

